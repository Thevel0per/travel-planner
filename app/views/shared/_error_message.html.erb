<%# Error Message Component - Reusable %>
<%# Displays validation error messages with Material Design styling %>
<%# Usage: render 'shared/error_message', errors: errors, field_id: field_id %>

<% if errors.present? && errors.any? %>
  <div class="mt-2 flex items-start gap-2" role="alert" id="<%= field_id %>">
    <svg class="h-5 w-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <div class="flex-1">
      <% errors.each do |error| %>
        <p class="text-sm font-medium text-red-600"><%= error %></p>
      <% end %>
    </div>
  </div>
<% end %>

