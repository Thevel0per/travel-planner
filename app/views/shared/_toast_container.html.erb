<%# Toast Container Component %>
<%# Manages display of flash messages as toast notifications %>
<%# Positioned in top-right corner, stacks toasts vertically %>

<div id="toast-container" class="fixed top-4 right-4 z-[9999] flex flex-col gap-4" aria-live="polite" aria-atomic="true">
  <% if flash[:notice].present? %>
    <%= render 'shared/success_toast', message: flash[:notice] %>
  <% end %>
  
  <% if flash[:alert].present? %>
    <%= render 'shared/error_toast', message: flash[:alert] %>
  <% end %>
</div>

