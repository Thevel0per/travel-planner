<%# Notes Tab Partial %>
<%# Displays the Notes tab content with form to add new notes and list of notes %>
<%# Usage: render 'trips/notes_tab', trip: @trip %>

<div class="space-y-6">
  <!-- Add Note Form Section -->
  <%= render 'add_note_form', trip: trip %>
  
  <!-- Notes List Section -->
  <%= render 'notes_list', notes: trip.notes.order(created_at: :desc) %>
</div>
