<%# Plan Status Banner Partial %>
<%# Displays the current status of the generated plan with visual indicators %>
<%# Usage: render 'trips/generated_plans/plan_status_banner', status: @generated_plan.status %>

<% status_classes = case status
     when 'pending'
       'bg-gray-100 text-gray-800 border-gray-300'
     when 'generating'
       'bg-blue-100 text-blue-800 border-blue-300'
     when 'completed'
       'bg-green-100 text-green-800 border-green-300'
     when 'failed'
       'bg-red-100 text-red-800 border-red-300'
     else
       'bg-gray-100 text-gray-800 border-gray-300'
   end %>

<% status_messages = {
     'pending' => 'Your travel plan is queued for generation.',
     'generating' => 'Your travel plan is being generated. This may take a few moments...',
     'completed' => 'Your travel plan has been successfully generated.',
     'failed' => 'Plan generation failed. Please try generating a new plan.'
   } %>

<div class="mb-8">
  <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
    <div class="flex items-center gap-4">
      <!-- Status Chip -->
      <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium border <%= status_classes %>">
        <% if status == 'generating' %>
          <svg class="animate-spin -ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        <% end %>
        <%= status.humanize %>
      </span>
      
      <!-- Status Message -->
      <p class="text-sm text-gray-700 flex-1">
        <%= status_messages[status] || 'Status unknown.' %>
      </p>
    </div>
  </div>
</div>

