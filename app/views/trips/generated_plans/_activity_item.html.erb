<%# Activity Item Partial %>
<%# Displays a single activity with all its details: time, name, duration, costs, rating, and description %>
<%# Usage: render 'trips/generated_plans/activity_item', activity: activity %>

<% 
  # Format duration from minutes to readable format
  duration_hours = activity.duration_minutes / 60
  duration_minutes_remainder = activity.duration_minutes % 60
  duration_display = if duration_hours > 0 && duration_minutes_remainder > 0
                       "#{pluralize(duration_hours, 'hour')} #{pluralize(duration_minutes_remainder, 'minute')}"
                     elsif duration_hours > 0
                       pluralize(duration_hours, 'hour')
                     else
                       pluralize(duration_minutes_remainder, 'minute')
                     end
  
  # Star rating (0-5 scale)
  rating_value = activity.rating.to_f
  full_stars = rating_value.floor
  has_half_star = (rating_value - full_stars) >= 0.5
%>

<div class="bg-gray-50 rounded-lg border border-gray-200 p-5 hover:border-gray-300 transition-colors">
  <div class="flex flex-col sm:flex-row sm:items-start gap-4">
    <!-- Time Badge -->
    <div class="flex-shrink-0">
      <div class="flex items-center gap-2 px-3 py-1.5 bg-blue-100 rounded-lg border border-blue-200">
        <svg class="w-4 h-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-sm font-semibold text-blue-900"><%= activity.time %></span>
      </div>
    </div>
    
    <!-- Activity Content -->
    <div class="flex-1 min-w-0">
      <!-- Activity Name -->
      <h5 class="text-lg font-semibold text-gray-900 mb-2">
        <%= activity.name %>
      </h5>
      
      <!-- Activity Details Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mb-3">
        <!-- Duration -->
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= duration_display %></span>
        </div>
        
        <!-- Rating -->
        <div class="flex items-center gap-2 text-sm">
          <span class="text-gray-600">Rating:</span>
          <div class="flex items-center">
            <% 5.times do |i| %>
              <% if i < full_stars %>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% elsif i == full_stars && has_half_star %>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <defs>
                    <linearGradient id="half-<%= i %>">
                      <stop offset="50%" stop-color="currentColor" />
                      <stop offset="50%" stop-color="#d1d5db" />
                    </linearGradient>
                  </defs>
                  <path fill="url(#half-<%= i %>)" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% else %>
                <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% end %>
            <% end %>
            <span class="ml-2 text-xs text-gray-600"><%= number_with_precision(rating_value, precision: 1) %>/5</span>
          </div>
        </div>
        
        <!-- Total Cost -->
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Total: <%= number_to_currency(activity.estimated_cost_usd, precision: 2) %></span>
        </div>
        
        <!-- Cost Per Person -->
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <span>Per person: <%= number_to_currency(activity.estimated_cost_per_person_usd, precision: 2) %></span>
        </div>
      </div>
      
      <!-- Description -->
      <% if activity.description.present? %>
        <p class="text-sm text-gray-700 leading-relaxed mb-3">
          <%= activity.description %>
        </p>
      <% end %>
      
      <!-- Google Maps Link -->
      <% if activity.google_maps_url.present? %>
        <div class="mt-3 pt-3 border-t border-gray-200">
          <%= link_to activity.google_maps_url, 
              target: '_blank', 
              rel: 'noopener noreferrer',
              class: 'inline-flex items-center gap-2 text-sm text-blue-600 hover:text-blue-800 transition-colors' do %>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
            </svg>
            <span>View on Google Maps</span>
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

