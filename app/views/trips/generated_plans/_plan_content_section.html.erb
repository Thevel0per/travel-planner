<%# Plan Content Section Partial %>
<%# Wrapper component that displays the full plan content only when status is 'completed' %>
<%# Usage: render 'trips/generated_plans/plan_content_section', content: @generated_plan.content, generated_plan: @generated_plan, trip: @trip %>

<% if content.present? %>
  <div class="space-y-8">
    <!-- Plan Summary Card -->
    <%= render 'plan_summary_card', summary: content.summary %>
    
    <!-- Recommended Hotels Section -->
    <%= render 'hotels_section', hotels: content.hotels %>
    
    <!-- Daily Itinerary Section -->
    <%= render 'daily_itinerary_section', daily_itinerary: content.daily_itinerary %>
    
    <!-- Plan Rating Section -->
    <%= render 'plan_rating_section', generated_plan: generated_plan, trip: trip %>
  </div>
<% else %>
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
    <div class="flex items-start">
      <svg class="h-6 w-6 text-yellow-600 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <div>
        <h3 class="text-sm font-medium text-yellow-800 mb-1">Plan content unavailable</h3>
        <p class="text-sm text-yellow-700">
          Plan content is unavailable. Please regenerate the plan.
        </p>
      </div>
    </div>
  </div>
<% end %>

