<%# Restaurant Item Partial %>
<%# Displays a single restaurant recommendation with meal type, name, cuisine, cost per person, and rating %>
<%# Usage: render 'trips/generated_plans/restaurant_item', restaurant: restaurant %>

<% 
  # Meal type badge color coding
  meal_colors = {
    'breakfast' => 'bg-orange-100 text-orange-800 border-orange-300',
    'lunch' => 'bg-blue-100 text-blue-800 border-blue-300',
    'dinner' => 'bg-purple-100 text-purple-800 border-purple-300'
  }
  meal_color_classes = meal_colors[restaurant.meal] || 'bg-gray-100 text-gray-800 border-gray-300'
  
  # Star rating (0-5 scale)
  rating_value = restaurant.rating.to_f
  full_stars = rating_value.floor
  has_half_star = (rating_value - full_stars) >= 0.5
%>

<div class="bg-gray-50 rounded-lg border border-gray-200 p-5 hover:border-gray-300 transition-colors">
  <div class="flex flex-col sm:flex-row sm:items-start gap-4">
    <!-- Meal Type Badge -->
    <div class="flex-shrink-0">
      <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium border <%= meal_color_classes %>">
        <%= restaurant.meal.humanize %>
      </span>
    </div>
    
    <!-- Restaurant Content -->
    <div class="flex-1 min-w-0">
      <!-- Restaurant Name -->
      <h5 class="text-lg font-semibold text-gray-900 mb-2">
        <%= restaurant.name %>
      </h5>
      
      <!-- Restaurant Details Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mb-3">
        <!-- Cuisine Type -->
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <span><%= restaurant.cuisine %></span>
        </div>
        
        <!-- Rating -->
        <div class="flex items-center gap-2 text-sm">
          <span class="text-gray-600">Rating:</span>
          <div class="flex items-center">
            <% 5.times do |i| %>
              <% if i < full_stars %>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% elsif i == full_stars && has_half_star %>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <defs>
                    <linearGradient id="half-restaurant-<%= i %>">
                      <stop offset="50%" stop-color="currentColor" />
                      <stop offset="50%" stop-color="#d1d5db" />
                    </linearGradient>
                  </defs>
                  <path fill="url(#half-restaurant-<%= i %>)" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% else %>
                <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% end %>
            <% end %>
            <span class="ml-2 text-xs text-gray-600"><%= number_with_precision(rating_value, precision: 1) %>/5</span>
          </div>
        </div>
        
        <!-- Cost Per Person -->
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Per person: <%= number_to_currency(restaurant.estimated_cost_per_person_usd, precision: 2) %></span>
        </div>
      </div>
    </div>
  </div>
</div>

