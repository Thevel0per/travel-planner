<%# Activities List Partial %>
<%# Container component that displays a list of activities for a specific day %>
<%# Usage: render 'trips/generated_plans/activities_list', activities: day.activities %>

<% if activities.present? && activities.any? %>
  <div class="space-y-4">
    <% activities.each do |activity| %>
      <%= render 'activity_item', activity: activity %>
    <% end %>
  </div>
<% else %>
  <!-- Empty State -->
  <div class="text-center py-6 text-gray-500">
    <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
    </svg>
    <p class="mt-2 text-sm">No activities scheduled</p>
  </div>
<% end %>

