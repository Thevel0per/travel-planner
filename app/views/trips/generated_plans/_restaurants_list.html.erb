<%# Restaurants List Partial %>
<%# Container component that displays a list of restaurant recommendations for a specific day %>
<%# Usage: render 'trips/generated_plans/restaurants_list', restaurants: day.restaurants %>

<% if restaurants.present? && restaurants.any? %>
  <div class="space-y-4">
    <% restaurants.each do |restaurant| %>
      <%= render 'restaurant_item', restaurant: restaurant %>
    <% end %>
  </div>
<% else %>
  <!-- Empty State -->
  <div class="text-center py-6 text-gray-500">
    <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>
    <p class="mt-2 text-sm">No restaurant recommendations</p>
  </div>
<% end %>

