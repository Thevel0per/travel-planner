<%# Rating Form Partial %>
<%# Form component for submitting or updating a plan rating (1-10 scale) %>
<%# Usage: render 'trips/generated_plans/rating_form', generated_plan: @generated_plan, trip: @trip %>

<% generated_plan_model = GeneratedPlan.find(generated_plan.id) %>
<% current_rating = generated_plan.rating %>

<div id="rating_form_container" data-controller="star-rating">
  <%= form_with model: [trip, generated_plan_model], 
      url: trip_generated_plan_path(trip, generated_plan_model),
      method: :patch,
      local: false, 
      class: 'space-y-4',
      data: { turbo: true } do |form| %>
    
    <!-- Hidden Input for Rating Value -->
    <%= form.hidden_field :rating, id: 'generated_plan_rating', value: current_rating %>
    
    <!-- Clickable Star Rating -->
    <div>
      <% if current_rating.present? %>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Your Rating:
        </label>
        <p class="text-xs text-gray-500 mb-3">Click a star to change your rating</p>
      <% else %>
        <label class="block text-sm font-medium text-gray-700 mb-3">
          Rate this plan:
        </label>
      <% end %>
      
      <!-- Clickable Stars -->
      <div class="flex items-center gap-2">
        <% 10.times do |i| %>
          <button
            type="button"
            class="focus:outline-none transition-transform hover:scale-110 active:scale-95"
            data-star-rating-target="star"
            data-star-value="<%= i + 1 %>"
            data-action="click->star-rating#selectRating"
            aria-label="Rate <%= i + 1 %> out of 10">
            <svg class="w-8 h-8 <%= i < (current_rating || 0) ? 'text-yellow-400' : 'text-gray-300' %> transition-colors" 
                 fill="currentColor" 
                 viewBox="0 0 20 20" 
                 aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </button>
        <% end %>
        
        <!-- Rating Display -->
        <span class="ml-4 text-lg font-bold text-gray-900">
          <span data-star-rating-target="ratingDisplay"><%= current_rating || 0 %></span>/10
        </span>
      </div>
      
      <!-- Error Messages -->
      <% if generated_plan_model.errors[:rating].any? %>
        <div id="rating_errors" class="mt-3">
          <% generated_plan_model.errors[:rating].each do |error| %>
            <p class="text-sm text-red-600"><%= error %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

