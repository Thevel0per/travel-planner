<%# Hotel Item Partial %>
<%# Displays a single hotel recommendation with name, location, cost, rating, and Google Maps link %>
<%# Usage: render 'trips/generated_plans/hotel_item', hotel: hotel %>

<% 
  # Star rating (0-5 scale)
  rating_value = hotel.rating.to_f
  full_stars = rating_value.floor
  has_half_star = (rating_value - full_stars) >= 0.5
%>

<div class="bg-gray-50 rounded-lg border border-gray-200 p-5 hover:border-gray-300 transition-colors">
  <!-- Hotel Name -->
  <h3 class="text-lg font-semibold text-gray-900 mb-2">
    <%= hotel.name %>
  </h3>
  
  <!-- Location -->
  <div class="flex items-start gap-2 mb-3">
    <svg class="w-4 h-4 text-gray-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>
    <p class="text-sm text-gray-600 flex-1"><%= hotel.location %></p>
  </div>
  
  <!-- Rating and Cost -->
  <div class="grid grid-cols-2 gap-3 mb-3">
    <!-- Rating -->
    <div class="flex items-center gap-2">
      <span class="text-xs text-gray-600">Rating:</span>
      <div class="flex items-center">
        <% 5.times do |i| %>
          <% if i < full_stars %>
            <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          <% elsif i == full_stars && has_half_star %>
            <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <defs>
                <linearGradient id="half-hotel-<%= hotel.name.parameterize %>-<%= i %>">
                  <stop offset="50%" stop-color="currentColor" />
                  <stop offset="50%" stop-color="#d1d5db" />
                </linearGradient>
              </defs>
              <path fill="url(#half-hotel-<%= hotel.name.parameterize %>-<%= i %>)" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          <% else %>
            <svg class="w-3 h-3 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          <% end %>
        <% end %>
        <span class="ml-1 text-xs text-gray-600"><%= number_with_precision(rating_value, precision: 1) %></span>
      </div>
    </div>
    
    <!-- Cost Per Night -->
    <div class="flex items-center gap-2 text-sm text-gray-600">
      <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="text-xs"><%= number_to_currency(hotel.estimated_cost_per_night_usd, precision: 2) %>/night</span>
    </div>
  </div>
  
  <!-- Description (if present) -->
  <% if hotel.description.present? %>
    <p class="text-sm text-gray-700 mb-3 leading-relaxed">
      <%= hotel.description %>
    </p>
  <% end %>
  
  <!-- Google Maps Link -->
  <% if hotel.google_maps_url.present? %>
    <div class="mt-3 pt-3 border-t border-gray-200">
      <%= link_to hotel.google_maps_url, 
          target: '_blank', 
          rel: 'noopener noreferrer',
          class: 'inline-flex items-center gap-2 text-sm text-blue-600 hover:text-blue-800 transition-colors' do %>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
        </svg>
        <span>View on Google Maps</span>
        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      <% end %>
    </div>
  <% end %>
</div>

