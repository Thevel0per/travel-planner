<%# Hotels Section Partial %>
<%# Displays recommended hotels for the trip %>
<%# Usage: render 'trips/generated_plans/hotels_section', hotels: content.hotels %>

<% if hotels.present? && hotels.any? %>
  <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      Recommended Hotels
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% hotels.each do |hotel| %>
        <%= render 'hotel_item', hotel: hotel %>
      <% end %>
    </div>
  </div>
<% end %>

