<%# Generated Plans List Partial %>
<%# Renders a list of generated plans or empty state %>
<%# Usage: render 'trips/generated_plans_list', plans: @trip.generated_plans %>

<div id="generated_plans_list">
  <% if plans.any? %>
    <div class="space-y-4">
      <% plans.each do |plan| %>
        <%= render 'generated_plan_item', plan: plan %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
      </svg>
      <h3 class="mt-4 text-sm font-medium text-gray-900">No generated plans yet</h3>
      <p class="mt-2 text-sm text-gray-500">Click 'Generate Plan' above to create your first AI-powered travel plan.</p>
    </div>
  <% end %>
</div>

