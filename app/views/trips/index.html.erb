<%# Material Design Trips List View %>
<div class="min-h-screen bg-gray-50" data-controller="material-tailwind">
  <!-- Main Content with Material Design Container -->
  <main class="container mx-auto px-4 py-8 max-w-7xl">
    
    <!-- Material Design Page Header -->
    <div class="mb-10">
      <h1 class="block antialiased tracking-normal font-sans text-4xl font-bold leading-tight text-blue-gray-900 mb-2">
        My Trips
      </h1>
      <p class="block antialiased font-sans text-base leading-relaxed text-gray-700">
        Plan and manage your travel adventures
      </p>
    </div>

    <!-- Trips Content Area -->
    <% if @trips.any? %>
      <%= render 'trips_grid', trips: @trips %>
      
      <!-- Material Design Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="mt-10 flex justify-center">
          <div class="inline-flex items-center gap-2">
            <%== pagy_nav(@pagy) %>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= render 'empty_state' %>
    <% end %>

    <!-- Material Design Floating Action Button -->
    <%= render 'new_trip_fab' %>
  </main>
</div>
