<%# Trip Card Partial - Material Design Card %>
<%# @param trip [Trip] The trip to display %>

<%= link_to trip_path(trip), 
    class: "relative flex flex-col bg-clip-border rounded-xl bg-white text-gray-700 shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden group",
    data: { ripple: "light" },
    "aria-label": "View trip to #{trip.destination}" do %>
  
  <!-- Card Content -->
  <div class="p-6">
    <!-- Destination Header -->
    <div class="flex items-start justify-between mb-4">
      <h5 class="block antialiased tracking-normal font-sans text-xl font-semibold leading-snug text-blue-gray-900 truncate flex-1 group-hover:text-blue-600 transition-colors">
        <%= trip.destination %>
      </h5>
      <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transition-colors flex-shrink-0 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
    
    <!-- Trip Dates -->
    <div class="flex items-center text-sm text-gray-600 mt-3">
      <svg class="w-4 h-4 mr-2 text-blue-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <time datetime="<%= trip.start_date.iso8601 %>" class="text-sm antialiased font-normal leading-relaxed text-gray-700">
        <%= trip.start_date.strftime('%b %-d, %Y') %>
      </time>
      <span class="mx-2 text-gray-500">â€”</span>
      <time datetime="<%= trip.end_date.iso8601 %>" class="text-sm antialiased font-normal leading-relaxed text-gray-700">
        <%= trip.end_date.strftime('%b %-d, %Y') %>
      </time>
    </div>
  </div>
  
  <!-- Hover overlay effect -->
  <div class="absolute inset-0 bg-blue-500 opacity-0 group-hover:opacity-5 transition-opacity duration-300"></div>
<% end %>

