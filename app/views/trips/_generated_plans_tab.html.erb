<%# Generated Plans Tab Partial %>
<%# Displays the Generated Plans tab content with generate button and list of plans %>
<%# Usage: render 'trips/generated_plans_tab', trip: @trip %>

<div class="space-y-6">
  <!-- Generate Plan Button Section -->
  <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
    <%= button_to trip_generated_plans_path(trip),
        method: :post,
        class: 'inline-flex items-center justify-center rounded-lg bg-blue-500 px-6 py-3 text-sm font-medium text-white shadow-md shadow-blue-500/20 transition-all hover:shadow-lg hover:shadow-blue-500/40 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none w-full md:w-auto',
        data: { 
          ripple: "light"
        } do %>
      <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
      Generate Plan
    <% end %>
    <p class="mt-2 text-xs text-blue-700">
      AI will generate a personalized travel plan based on your trip details and preferences.
    </p>
  </div>
  
  <!-- Generated Plans List Section -->
  <%= render 'generated_plans_list', plans: trip.generated_plans %>
</div>
