<%# Confirmation Success Page %>
<%# Displayed after user successfully confirms their email address %>

<div data-controller="material-tailwind">
  <main class="container mx-auto px-4 py-8 max-w-2xl">
    <%= render 'shared/page_header', title: 'Email Confirmed' %>
    
    <%# Success Message Card %>
    <div class="rounded-lg bg-green-50 border border-green-200 p-6 mb-6">
      <div class="flex items-start">
        <svg class="h-6 w-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800">
            Your email address has been successfully confirmed. You can now sign in to your account.
          </p>
        </div>
      </div>
    </div>
    
    <%# Link to Sign In - Styled as Primary Button %>
    <div class="text-center">
      <%= link_to "Sign In", new_session_path(resource_name), 
          class: 'inline-flex items-center justify-center rounded-lg bg-blue-500 px-6 py-2.5 text-sm font-medium text-white shadow-md shadow-blue-500/20 transition-all hover:shadow-lg hover:shadow-blue-500/40 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none', 
          data: { ripple: "light" } %>
    </div>
  </main>
</div>

